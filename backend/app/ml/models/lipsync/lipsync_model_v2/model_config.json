{
    "model_name": "SyncNet v2",
    "version": "2.0.0",
    "description": "Modelo de detecção de dessincronização áudio/vídeo (lipsync)",
    "author": "Haell39",
    "date": "2025-12-02",
    "framework": "TensorFlow/Keras 2.10",
    
    "files": {
        "keras": "syncnet_v2.keras",
        "tflite": "syncnet_v2.tflite",
        "tflite_quantized": "syncnet_v2_q.tflite",
        "inference": "syncnet_inference.py"
    },
    
    "input": {
        "audio": {
            "shape": [1, 13, 20, 1],
            "description": "MFCC features - 13 coeficientes x 20 frames",
            "sample_rate": 16000,
            "duration_sec": 2.0
        },
        "video": {
            "shape": [1, 5, 224, 224, 3],
            "description": "5 frames RGB normalizados",
            "resolution": "224x224",
            "format": "RGB normalized [0,1]"
        }
    },
    
    "output": {
        "classification": {
            "shape": [1, 3],
            "classes": ["sincronizado", "dessincronizado", "sem_fala"],
            "description": "Probabilidades de cada classe"
        },
        "offset_prediction": {
            "shape": [1, 1],
            "unit": "seconds",
            "description": "Offset estimado em segundos"
        }
    },
    
    "thresholds": {
        "sync_threshold_ms": 80,
        "min_confidence": 0.5,
        "description": "Vídeo sincronizado se offset < 80ms"
    },
    
    "performance": {
        "training_accuracy": "100%",
        "validation_accuracy": "100%",
        "test_accuracy": "100%",
        "training_samples": 385,
        "epochs": 30
    },
    
    "requirements": {
        "python": ">=3.8",
        "tensorflow": ">=2.10.0",
        "opencv-python": ">=4.5.0",
        "librosa": ">=0.9.0",
        "numpy": ">=1.20.0"
    },
    
    "usage": {
        "python": "from syncnet_inference import SyncNetInference, analyze_video\nmodel = SyncNetInference('syncnet_v2.keras')\nresult = model.predict('video.mp4')\nprint(result.status)",
        "cli": "python syncnet_inference.py video.mp4"
    }
}
